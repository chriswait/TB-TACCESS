echo "Compiling...";
pdflatex v2-acmsmall-sample.tex > /dev/null;
echo "Compiling references..."
bibtex v2-acmsmall-sample.aux > /dev/null;
echo "Compiling again..."
pdflatex v2-acmsmall-sample.tex > /dev/null;
echo "And again for luck"
pdflatex v2-acmsmall-sample.tex;
echo "Counting things...";
echo `detex v2-acmsmall-sample.tex | wc -w` words;
detex v2-acmsmall-sample.tex | grep "TODO" > todo
echo `cat todo | wc -l` todos;
cat todo | grep -o "[0-9][0-9][0-9]" | awk '{total += $1} END {print "TODO:", total, "words"}'
open v2-acmsmall-sample.pdf;
